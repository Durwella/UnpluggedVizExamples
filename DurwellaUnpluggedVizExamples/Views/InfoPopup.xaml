<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
	x:Class="DurwellaUnpluggedVizExamples.InfoPopup"
	Padding="20,0,20,0"
	>
	<StackLayout BackgroundColor="White" VerticalOptions="Center" Padding="4,4,4,0">
		<Label Text="Information" FontAttributes="Bold" HorizontalOptions="Center" FontSize="18"></Label>
  		<Label Text="{Binding Information}" HorizontalTextAlignment="Center"></Label>
		<Button Text="Dismiss" Command="{Binding DismissCommand}" HorizontalOptions="Center"></Button>
	</StackLayout>
</pages:PopupPage>